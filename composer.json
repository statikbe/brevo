{
    "name": "statikbe/craft-brevo",
    "description": "Brevo integration for Craft CMS",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "mail",
        "brevo"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/statikbe/craft-brevo/issues?state=open",
        "source": "https://github.com/statikbe/craft-brevo",
        "docs": "https://github.com/statikbe/craft-brevo"
    },
    "authors": [
        {
            "name": "Statik",
            "homepage": "https://www.statik.be"
        },
        {
            "name": "Sarah Oorts",
            "email": "sarah@statik.be"
        }
    ],
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.0.0",
        "getbrevo/brevo-php": "1.x.x"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "statikbe\\brevo\\": "src/"
        }
    },
    "extra": {
        "name": "Brevo",
        "handle": "brevo",
        "hasSettings": true,
        "developer": "Statik",
        "class": "statikbe\\brevo\\Brevo"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}

